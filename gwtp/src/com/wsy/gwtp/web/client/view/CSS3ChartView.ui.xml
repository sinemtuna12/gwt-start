<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	<ui:style src="../resources/css/css3chart.css">
		/* general styles for demo ******************/
	</ui:style>
	<g:HTMLPanel>

		<h1>CSS3 Charts</h1>
		<h4>
			No JavaScript, no images, just pure CSS code.
			<span class="{style.red_info}">Optimized for Firefox. </span>
			<br />
			<span class="{style.blue_info}">Hint: try to hover over the charts! You may also
				reload the page to see the enter animation.</span>
		</h4>
		<br />



		<div class="{style.user_outer}">
			<div class="{style.bar_chart} {style.w30}">
				<span class="{style.scale} {style.h10}">10 -</span>
				<span class="{style.scale} {style.h20}">20 -</span>
				<span class="{style.scale} {style.h30}">30 -</span>
				<span class="{style.scale} {style.h40}">40 -</span>
				<span class="{style.scale} {style.h50}">50 -</span>
				<span class="{style.scale} {style.h60}">60 -</span>
				<span class="{style.scale} {style.h70}">70 -</span>
				<span class="{style.scale} {style.h80}">80 -</span>
				<span class="{style.scale} {style.h90}">90 - </span>
				<span class="{style.scale} {style.h100}">100 -</span>

				<div class="{style.legend}">
					<span class="{style.square} {style.turquoise}"></span>
					winter
					<br />
					<span class="{style.square} {style.blue_light}"></span>
					spring
					<br />
					<span class="{style.square} {style.purple}"></span>
					summer
					<br />
					<span class="{style.square} {style.pink}"></span>
					autumn
					<br />
				</div>
				<span class="{style.space}"></span>

				<dl>
					<dt>January</dt>
					<dd class="{style.turquoise} {style.v50}">
						<span>50</span>
					</dd>
				</dl>
				<dl>
					<dt>February</dt>
					<dd class="{style.turquoise} {style.v43}">
						<span>43</span>
					</dd>
				</dl>
				<dl>
					<dt>March</dt>
					<dd class="{style.turquoise} {style.v57}">
						<span>57</span>
					</dd>
				</dl>
				<dl>
					<dt>April</dt>
					<dd class="{style.blue_light} {style.v45}">
						<span>45</span>
					</dd>
				</dl>
				<dl>
					<dt>May</dt>
					<dd class="{style.blue_light} {style.v35}">
						<span>35</span>
					</dd>
				</dl>

				<dl>
					<dt>June</dt>
					<dd class="{style.blue_light} {style.v30}">
						<span>30</span>
					</dd>
				</dl>
				<dl>
					<dt>July</dt>
					<dd class="{style.purple} {style.v30}">
						<span>30</span>
					</dd>
				</dl>
				<dl>
					<dt>August</dt>
					<dd class="{style.purple} {style.v35}">
						<span>35</span>
					</dd>
				</dl>
				<dl>
					<dt>September</dt>
					<dd class="{style.purple} {style.v25}">
						<span>25</span>
					</dd>
				</dl>
				<dl>
					<dt>October</dt>
					<dd class="{style.pink} {style.v33}">
						<span>33</span>
					</dd>
				</dl>
				<dl>
					<dt>November</dt>
					<dd class="{style.pink} {style.v53}">
						<span>53</span>
					</dd>
				</dl>
				<dl>
					<dt>December</dt>
					<dd class="{style.pink} {style.v64}">
						<span>64</span>
					</dd>
				</dl>


			</div>

			<div class="{style.pie_outer}">

				<div class="{style.circle}">
					<div class="{style.triangle} {style.summer}"></div>
					<div class="{style.triangle} {style.autumn}"></div>
					<div class="{style.triangle} {style.autumn2}"></div>
					<div class="{style.triangle} {style.winter}"></div>
					<div class="{style.triangle} {style.winter2}"></div>
					<div class="{style.triangle} {style.spring}"></div>
					<div class="center"></div>
				</div>

				<span class="{style.percent} {style.nobg} {style.purple}">18%</span>
				<span class="{style.percent} {style.nobg} {style.pink}">30%</span>
				<span class="{style.percent} {style.nobg} {style.turquoise}">30%</span>
				<span class="{style.percent} {style.nobg} {style.blue_light}">22%</span>

				<div class="{style.center_circle}"></div>

			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
